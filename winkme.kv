<MainWindow>:

    name: "main"

    carousel: carousel

    RelativeLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size

        Label:
            text: "Top Discounts"
            pos_hint: {"center_x": 0.46, "center_y": 0.9}
            font_name: "fonts/josefin-sans/JosefinSans-Bold.ttf"
            font_size: dp(40)
            color: 1, .26, 0, 1
            on_ref_press:

        Carousel:
            anim_move_duration: 1
            pos_hint: {"x":.1, "center_y":0.7}
            id: carousel
            direction: 'right'
            loop: True
            index: 0
            # width: dp(200)
            # height: dp(300)
            size_hint_x: .8
            size_hint_y: 0.5
            Image:
                source: 'images/top discounts-edited/vans_tee1.jpg'
            Image:
                source: 'images/top discounts-edited/vans_shoes1.jfif'
            Image:
                source: 'images/top discounts-edited/vans_shoes2.jpg'
            Image:
                source: 'images/top discounts-edited/vans_tee1.jpg'

